<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.techeducation.groupmanager.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:text="Event Name"
                            android:id="@+id/txtEvntName"
                            android:padding="8dp"
                            android:textSize="@dimen/textPostEvent"
                            android:background="@color/colorAccent"
                            />
                    </TableRow>

                    <TableRow android:layout_weight="1"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:textColor="@color/colorTextEventList"
                            android:text="Date"
                            android:id="@+id/txtEvntDate"
                            android:padding="8dp"
                            android:textSize="@dimen/textPostEvent"
                            />

                        <TextView
                            android:gravity="end"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textColor="@color/colorTextEventList"
                            android:text="Time"
                            android:id="@+id/txtEvntTime"
                            android:padding="8dp"
                            android:textSize="@dimen/textPostEvent"
                            />

                    </TableRow>
                    <TableRow android:gravity="center">
                         <View android:layout_height="1dp"
                            android:layout_width="300dp"
                            android:padding="5dp"
                            android:background="@color/supportColor"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_span="4"
                            android:padding="8dp"
                            android:textSize="@dimen/textPostEvent"
                            android:id="@+id/txtEvntVenue"
                            android:textColor="@color/colorTextEventList"
                            android:text="Event's Venue"
                            />
                    </TableRow>
                    <TableRow android:gravity="center">
                        <View android:layout_height="1dp"
                            android:layout_width="300dp"
                            android:padding="5dp"
                            android:background="@color/supportColor"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_span="4"
                            android:padding="8dp"
                            android:textSize="@dimen/textPostEvent"
                            android:id="@+id/txtEvntDesc"
                            android:textColor="@color/colorTextEventList"
                            android:text="This is Event description.."
                            />
                    </TableRow>
                </TableLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
