<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/white"
                    android:text="Event Name"
                    android:id="@+id/tvEventName"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:background="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/white"
                    android:text="#id"
                    android:id="@+id/tvEventId"
                    android:gravity="end"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:background="@color/colorAccent"
                    />
            </TableRow>

            <TableRow android:layout_weight="1"
                android:layout_width="match_parent">
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textColor="#797979"
                    android:text="Date"
                    android:id="@+id/tvEventDate"
                    android:padding="8dp"
                    android:textSize="15sp"
                    />

                <TextView
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="#797979"
                    android:text="Time"
                    android:id="@+id/tvEventTime"
                    android:padding="8dp"
                    android:textSize="15sp"
                    />

            </TableRow>
            <TableRow android:gravity="center">
                <View android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:padding="5dp"
                    android:background="#E0E0E0"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_span="4"
                    android:padding="8dp"
                    android:textSize="@dimen/textPostEvent"
                    android:id="@+id/txtEvntVenue"
                    android:textColor="@color/colorTextEventList"
                    android:text="Event's Venue"
                    />
            </TableRow>
            <TableRow android:gravity="center">
                <View android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:padding="5dp"
                    android:background="@color/supportColor"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_span="4"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="#797979"
                    android:text="This is Event description.."
                    android:id="@+id/tvEventDesc"
                    />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>